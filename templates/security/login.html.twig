{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="card col-md-6 offset-3">
    <div class="card-header">
        <a class="btn-back text-secondary" href="{{ path("app_boutique_index") }}">
            <i class="fas fa-2x fa-arrow-circle-left"></i>
        </a>
        <h3>
            <i class="fas fa-user-check"></i>
            Connexion
        </h3>
    </div>
    <div class="card-body">
        <form method="post">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label for="inputPassword">Mot de Passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="f87a26d671f45cc55a08d6c68d8e.-5ayBloFYJxNr_isWail4MQfrAsvS8vpTR8Ao27w0hU.mMf4NQp2Vqsl47b8Lfjvt6VllGgcBZ7aN1hW1CC8ul-x0-NKNzAW6y7OtQ">            {# TODO :
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}
            <br/>
            <button class="btn btn-primary btn-block" type="submit">
                Connexion
            </button>
        </form>
        <hr>
        <div class="col-md-12 text-right">
            <p>
                Nouveau client ?
                <a class="btn btn-sm btn-secondary" type="submit" href="{{ path("app_usager_new") }}">
                    Inscription
                </a>
            </p>
        </div>
    </div>
</div>

{% endblock %}
