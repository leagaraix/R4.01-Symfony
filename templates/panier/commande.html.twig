{% extends 'base.html.twig' %}

{% block title %}{% trans %} panier.index.title {% endtrans %}{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <a class="btn-back text-secondary" href="/info/R401/fr/usager/commandes"> {# TODO : renvoyer à la liste des commandes de l'utilisateur #}
                <i class="fas fa-2x fa-arrow-circle-left"></i>
            </a>
            <h3>Commande Passée</h3>
        </div>
        <div class="card-body">
            L'usager
            {{ usager.prenom }}
            {{ usager.nom }}
            a passé la commande n°
            <span class="badge badge-pill badge-secondary">{{ commande.id }}</span>
            le
            {{ commande.dateCreation|date('d-m-Y') }} à {{ commande.dateCreation|format_time }}
            <hr>
            <a class="btn btn-primary" href="/info/R401/fr/usager/commandes"> {# TODO : renvoyer à la liste des commandes de l'utilisateur #}
                Mes commandes
            </a>
        </div>
    </div>
{% endblock %}
