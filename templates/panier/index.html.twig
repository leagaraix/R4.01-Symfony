{% extends 'base.html.twig' %}

{% block title %}{% trans %} panier.index.title {% endtrans %}{% endblock %}

{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <a class="btn-back text-secondary" href="{{ path("app_boutique_index") }}">
                <i class="fas fa-2x fa-arrow-circle-left"></i>
            </a>
            <h3>
                <i class="fas fa-shopping-cart"></i>
                <span class="badge badge-pill badge-danger">0</span>
                produit(s) - montant :
                <b>0,00 €</b> {# TODO : automatiser ça, et le span au-dessus #}
            </h3>
        </div>

        {# Affichage des produits du panier #}
        <div class="card-body">

            {# S'il n'y a pas de produits #}
            {% if panier.getNombreProduits() == 0 %}

                <div class="card-body">
                    <h5>
                        <i>Ton panier est vide !<br>
                            Voudrais-tu briser notre petit cœur fragile de commerçant ?<br><br>
                        </i>
                        <a href="{{ path("app_boutique_index") }}">
                            <i class="fas fa-2x fa-heart-broken text-danger text-blink"></i>
                        </a>
                    </h5>
                </div>

            {# S'il y a des produits #}
            {% else %}

            <div class="row">
                <table class="table table-striped table-sm table-hover">
                    <thead>
                    <tr>
                        <th></th>
                        <th>Produit</th>
                        <th class="text-right">Prix</th>
                        <th>Quantité</th>
                        <th class="text-right">Total</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>

                        {% foreach %}
                            {# TODO : remplacer les liens et les infos par des appels au panier #}
                            <tr>
                                <td>
                                    <img src="/info/R401/images/produits/carottes.jpg" class="cart-img-produit" alt="Carotte">
                                </td>
                                <td>
                                    <a href="/info/R401/fr/boutique/rayon/2">
                                        <b>Carotte</b>
                                    </a>
                                </td>
                                <td class="text-right">
                                    2,90 €
                                </td>
                                <td>
                                    <a href="/info/R401/fr/panier/enlever/4">
                                        <i class="fas fa-minus-square text-muted"></i>
                                    </a>
                                    1
                                    <a href="/info/R401/fr/panier/ajouter/4">
                                        <i class="fas fa-plus-square text-muted"></i>
                                    </a>
                                </td>
                                <td class="text-right">
                                    2,90 €
                                </td>
                                <td>
                                    <a href="/info/R401/fr/panier/supprimer/4">
                                        <i class="fas fa-trash text-muted" data-toggle="tooltip" title="Supprimer <b>Carotte</b>" data-placement="right" data-html="true"></i>
                                    </a>
                                </td>
                            </tr>
                        {%endforeach %}

                    </tbody>
                    <tfoot>
                        <tr>
                            <th class="text-right" colspan="4">
                                Total
                            </th>
                            <th class="text-right">
                                2,90 € {# TODO : automatiser ça #}
                            </th>
                            <th>
                                <a href="/info/R401/fr/panier/vider">
                                    <i class="fas fa-trash text-muted" data-toggle="tooltip" title="Vider tout le Panier" data-placement="right" data-html="true"></i>
                                </a>
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            {% endif %}

        </div>
    </div>
{% endblock %}
